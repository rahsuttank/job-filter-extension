{
  "manifest_version": 3,
  "name": "LinkedIn Job Filter",
  "version": "1.0",
  "description": "Hide promoted jobs and blacklisted companies on LinkedIn",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/jobs/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedIn Job Filter"
  }
}